---
# Helm chart settings
seaweedfs_chart_repo: "https://seaweedfs.github.io/seaweedfs/helm/"
seaweedfs_chart_name: "seaweedfs"
seaweedfs_chart_version: "3.56"
seaweedfs_release_name: "seaweedfs"
seaweedfs_namespace: "seaweedfs"

# Kubeconfig for k3s
k3s_kubeconfig_path: "/etc/rancher/k3s/k3s.yaml"

# Helm binary path
helm_binary: "/usr/local/bin/helm"

# Дополнительные values для чарта
seaweedfs_values:
  master:
    replicas: 1
  volume:
    replicas: 1
  filer:
    replicas: 1
  s3:
    enabled: true
    serviceType: LoadBalancer
      serviceAnnotations:
        metallb.universe.tf/address-pool: default
    config: |
      {
        "identities": [
          {
            "name": "anvAdmin",
            "credentials": [{"accessKey":"test1","secretKey":"test1"}],
            "actions": ["Admin","Read","Write"]
          },
          {
            "name": "anvReadOnly",
            "credentials": [{"accessKey":"test","secretKey":"test"}],
            "actions": ["Read"]
          }
        ]
      }
